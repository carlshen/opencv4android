<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mat_operations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.book.chapter.three.MatOperationsActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择图像..."
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/select_image_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卷积操作"
        android:layout_toRightOf="@id/select_image_btn"
        android:layout_alignParentTop="true"
        android:id="@+id/convolution_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卷积操作1"
        android:layout_toRightOf="@id/convolution_btn"
        android:layout_alignParentTop="true"
        android:id="@+id/convolution_btn1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卷积操作2"
        android:layout_below="@+id/select_image_btn"
        android:layout_alignParentLeft="true"
        android:id="@+id/convolution_btn2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卷积操作3"
        android:layout_toRightOf="@id/convolution_btn2"
        android:layout_alignBottom="@+id/convolution_btn2"
        android:id="@+id/convolution_btn3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卷积操作4"
        android:layout_toRightOf="@id/convolution_btn3"
        android:layout_alignBottom="@+id/convolution_btn3"
        android:id="@+id/convolution_btn4"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卷积操作5"
        android:layout_toRightOf="@id/convolution_btn4"
        android:layout_alignBottom="@+id/convolution_btn4"
        android:id="@+id/convolution_btn5"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_below="@id/convolution_btn2"
        android:layout_centerInParent="true"
        android:src="@drawable/lena"
        android:id="@+id/chapter4_imageView"/>
</RelativeLayout>
